@model BusinessManagementApp.Models.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
    <style>
        #header {
            height: 50px;
            background-color: burlywood;
            font-size: xx-large;
            text-align: center;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col" id="header">
                Customer Information
            </div>
        </div>
        <form method="post">
            <table>
                <div class="row">
                    <div class="col">
                        Code:
                        <input type="text" class="form-control" name="Code" value="@Model.Code" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        Name:
                        <input type="text" class="form-control" name="Name" value="@Model.Name" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        Address:
                        <input type="text" class="form-control" name="Address" value="@Model.Address" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        Email:
                        <input type="text" class="form-control" name="Email" value="@Model.Email" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        ContactNo:
                        <input type="number" class="form-control" name="ContactNo" value="@Model.ContactNo" />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        LoyaltyPoint:
                        <input type="text" class="form-control" name="LoyaltyPoint" value="@Model.LoyaltyPoint" />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary" value="Save">Search</button>
            </table>
        </form>
        <table>
            <thead>
                <tr>
                    <td>SL</td>
                    <td>Code</td>
                    <td>Name</td>
                    <td>Address</td>
                    <td>Email</td>
                    <td>ContactNo</td>
                    <td>LoyaltyPoint</td>
                </tr>
            </thead>

            <tbody>
                @{ int SL = 1;}
                @foreach (var customer in Model.Customers)
                {
                    <tr>
                        <td>@(SL++)</td>
                        <td>@customer.Code</td>
                        <td>@customer.Name</td>
                        <td>@customer.Address</td>
                        <td>@customer.Email</td>
                        <td>@customer.ContactNo</td>
                        <td>@customer.LoyaltyPoint</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
