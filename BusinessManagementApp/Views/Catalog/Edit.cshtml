
@model BusinessManagementApp.Models.Models.Catalog

@{
    Layout = null;
}

@if (ViewBag.SuccesMsg != null)
{
    <h3 style="font-family: 'Times New Roman', Times, Serif; color: darkblue">@ViewBag.SuccesMsg</h3>
}

@if (ViewBag.FailedMsg != null)
{
    <h3 style="font-family: 'Times New Roman', Times, Serif; color: darkblue">@ViewBag.FailedMsg</h3>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <form method="post">
            <table>
                <tr>
                    <td>Code</td>
                    <td>
                        <input type="text" name="Code" value="@Model.Code">
                    </td>
                </tr>

                <tr>
                    <td>Name</td>
                    <td>
                        <input type="text" name="Name" value="@Model.Name">
                    </td>
                </tr>

                <tr>
                    <td>Action</td>
                    <td>
                        <input type="submit" value="Edit">
                    </td>
                </tr>
            </table>
        </form>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
</body>
</html>
