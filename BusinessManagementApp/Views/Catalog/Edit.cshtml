
@model BusinessManagementApp.Models.Models.Catalog

@{
    Layout = null;
}

@if (ViewBag.SuccesMsg != null)
{
    <h3 style="font-family: 'Times New Roman', Times, Serif; color: darkblue">@ViewBag.SuccesMsg</h3>
}

@if (ViewBag.FailedMsg != null)
{
    <h3 style="font-family: 'Times New Roman', Times, Serif; color: darkblue">@ViewBag.FailedMsg</h3>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        #header {
            height: 50px;
            background-color: burlywood;
            font-size: xx-large;
            text-align: center;
        }
    </style>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col" id="header">
                    Catagory Information
                </div>
            </div><br><br>
            <form method="post">
                <table>
                    <div class="form-group row">
                        <label for="inputEmail3" class="col-sm-2 col-form-label">Code</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(c=>c.Code, null, htmlAttributes: new { @class = "form-control", placeholder = "Code" })
                        </div>
                    </div>
                    <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(c=>c.Name, null, htmlAttributes: new { @class = "form-control", placeholder = "Name" })
                    </div>
                    <button type="submit" class="btn btn-info" value="Edit">Edit</button>
                </table>
            </form>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
