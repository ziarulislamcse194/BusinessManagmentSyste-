
@model BusinessManagementApp.Models.Models.Product

@{
    Layout = null;
}

@if (ViewBag.SuccesMsg != null)
{
    <h3 style="font-family: 'Times New Roman', Times, Serif; color: darkblue"> @ViewBag.SuccesMsg</h3>
}

@if (ViewBag.FailedMsg != null)
{
    <h3 style="font-family: 'Times New Roman', Times, Serif; color: darkblue"> @ViewBag.FailedMsg</h3>
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
<div>
    <form method="post">
        <table>
            <tr>
                <td>Code</td>
                <td>
                    <input type="text" name="Code" value="@Model.Code">
                </td>
            </tr>

            <tr>
                <td>Name</td>
                <td>
                    <input type="text" name="Name" value="@Model.Name">
                </td>
            </tr>

            <tr>
                <td>Catagory</td>
                <td>
                    <input type="text" name="Catagory" value="@Model.Catagory">
                </td>
            </tr>

            <tr>
                <td>ReorderLevel</td>
                <td>
                    <input type="text" name="ReorderLevel" value="@Model.ReorderLevel">
                </td>
            </tr>

            <tr>
                <td>Description</td>
                <td>
                    <input type="text" name="Description" value="@Model.Description">
                </td>
            </tr>

            <tr>
                <td>Action</td>
                <td>
                    <input type="submit" value="Edit">
                </td>
            </tr>
        </table>
    </form>
</div>
</body>
</html>

